@{
    Layout = null;
}
<form id="frmLogin" asp-controller="Auth" asp-action="Login" method="post">
    <div class="card ">
        <div class="card-body">
            <div class="input-group mb-3">
                <label class="input-group-text col-3" for="txtEmail">E-Mail</label>
                <input id="txtEmail" type="email" class="form-control col-9" name="Email" />
            </div>
            <div class="input-group">
                <label class="input-group-text col-3" for="txtPassword">Password</label>
                <input id="txtPassword" type="password" class="form-control col-9" name="Password" />
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a id="btnRegis" data-bs-toggle="modal" data-bs-target="#staticModalLg" class="text-blue" style="text-decoration: underline; cursor: pointer;">Registrasi</a>
            <button type="submit" class="btn btn-primary">
                <span>Login</span>
            </button>
        </div>
    </div>
</form>

<script>
    $("#staticModalLabel").text("@ViewBag.Title");

    $("#btnRegis").click(function () {
        $("#staticModalLgBody").html(spinner);
        $("#staticModalLgBody").load("/Customer/Create/");
    });
</script>
