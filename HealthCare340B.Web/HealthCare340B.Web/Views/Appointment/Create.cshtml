@model VMMDoctor?
@{
    Layout = null;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

<div class="card">
    <div class="card-body">
        <div class="row d-flex justify-content-between">
            <div class="col-3">
                <img id="profileImage" src="~/@ViewBag.imgFolder/@(Model.ImagePath ?? "blank-profile-picture.png")" alt="Avatar" class="img-thumbnail rounded-circle">
            </div>
            <div class="col-2"></div>
            <div class="col-7">
                <h3>@Model.Fullname</h3>
                <h5>@Model.Str</h5>
            </div>
        </div>
        &nbsp;
        <form id="frmAppointment">
            <div class="row mb-3">
                <div class="col-4">Konsultasi Untuk<span class="text-danger">*</span></div>
                <div class="col-8">
                    <select id="member" name="Member" class="form-select">
                        <option value="0">Sendiri</option>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-4">Faskes<span class="text-danger">*</span></div>
                <div class="col-8">
                    <select id="medFac" name="MedFac" class="form-select">
                        <option value="0">-- Select MedFac --</option>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-4">Waktu Kedatangan<span class="text-danger">*</span></div>
                <div class="col-8">
                    <input id="date" name="AppointmentDate" type="datetime" size="29" disabled />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-4">Sesi<span class="text-danger">*</span></div>
                <div class="col-8">
                    <select id="sesi" name="Sesi" class="form-select" disabled>
                        <option value="">-- Select Sesi --</option>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-4">Tindakan<span class="text-danger">*</span></div>
                <div class="col-8">
                    <select id="tindakan" name="Tindakan" class="form-select" disabled>
                        <option value="">-- Select Action --</option>
                    </select>
                </div>
            </div>
        </form>
    </div>
    <div class="d-flex justify-content-between">
        <div class="w-10"></div>
        <div class="w-30"><button id="btnCancel" class="btn btn-outline-danger">Cancel</button></div>
        <div class="w-10"></div>
        <div class="w-30"><button id="btnSave" class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#staticModalLg">Buat Janji</button></div>
        <div class="w-10"></div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

<script>
    $(document).ready(() => {
        $.ajax({
            url: "/Appointment/GetMemberById",
            data: {
                biodataId: @Context.Session.GetInt32("userBiodataId")
                },
            beforeSend: () => { },
            success: function (response) {
                //debugger;
                //console.log(response.statusCode);
                $("#member").empty();
                $("#member").append(
                    `<option value="0">Sendiri</option>`
                );
                if (response.statusCode == 200) {
                    if (response.data.length > 0) {
                        $.each(
                            response.data,
                            function (idx, data) {
                                $("#member").append(
                                    `<option value="${data.id}">${data.fullname}, ${data.customerRelationName}</option>`
                                );
                            }
                        );
                    }

                }
            },
            error: function (errResponse) {
                console.error("errResponse", errResponse)
                debugger;
            }
        });

        $.ajax({
            url: "/Appointment/GetMedFacByDoctorId",
            data: {
                doctorId: @ViewBag.DoctorId
                    },
            beforeSend: () => { },
            success: function (response) {
                //debugger;
                //console.log(response.statusCode);
                $("#medFac").empty();
                $("#medFac").append(
                    `<option value="">-- Select MedFac --</option>`
                );
                if (response.statusCode == 200) {
                    if (response.data.length > 0) {
                        $.each(
                            response.data,
                            function (idx, data) {
                                $("#medFac").append(
                                    `<option value="${data.id}">${data.name}</option>`
                                );
                            }
                        );
                    }
                }
            },
            error: function (errResponse) {
                console.error("errResponse", errResponse)
                debugger;
            }
        });

        $("#medFac").change(function (e) {
            $("#tindakan").val("");
            $("#tindakan").empty();
            $("#tindakan").prop("disabled", true);
            $("#date").val("");
            $("#date").prop("disabled", true);
            $("#sesi").val("");
            $("#sesi").empty();
            $("#sesi").prop("disabled", true);
            var emptySlotDate = null;
            var startDate = null;
            var endDate = null;
            if ($(this).val() != 0) {
                $.ajax({
                    url: "/Appointment/GetStartDate",
                    data: {
                        doctorId: @ViewBag.DoctorId,
                        medFacId: $("#medFac").val()
                    },
                    async: false,
                    beforeSend: () => { },
                    success: function (response) {
                        debugger;
                        startDate = response;
                    },
                    error: function (errResponse) {
                        debugger;
                        console.log(errResponse);
                    }
                });

                $.ajax({
                    url: "/Appointment/GetEndDate",
                    data: {
                        doctorId: @ViewBag.DoctorId,
                        medFacId: $("#medFac").val()
                    },
                    async: false,
                    beforeSend: () => { },
                    success: function (response) {
                        debugger;
                        endDate = response;
                    },
                    error: function (errResponse) {
                        debugger;
                        console.log(errResponse);
                    }
                });

                $.ajax({
                    url: "/Appointment/GetEmptySlotDate",
                    data: {
                        medFacId: $("#medFac").val(),
                        doctorId: @ViewBag.DoctorId
                                                                },
                    async: false,
                    beforeSend: () => { },
                    success: function (response) {
                        debugger;
                        emptySlotDate = response;
                    },
                    error: function (errResponse) {
                        debugger;
                        console.log(errResponse);
                    }
                });

                $.ajax({
                    url: "/Appointment/GetScheduleDayOfWeek",
                    data: {
                        medFacId: $(this).val(),
                        doctorId: @ViewBag.DoctorId
                                },
                    beforeSend: () => { },
                    success: function (response) {
                        //debugger;
                        $("#date").val("");
                        $("#date").prop("disabled", false)

                        $("#date").flatpickr({
                            minDate: startDate,
                            maxDate: endDate,
                            dateFormat: "Y-m-d",
                            enable: [
                                function (date) {
                                    var checkDay = false;
                                    $.each(
                                        response,
                                        function (idx, data) {
                                            //debugger;
                                            var checkSlotDate = true
                                            $.each(
                                                emptySlotDate,
                                                function (idx2, data2) {

                                                    debugger;
                                                    var dateDate = date.getDate();
                                                    if (dateDate < 10) {
                                                        dateDate = "0" + dateDate;
                                                    }
                                                    var dateMonth = date.getMonth() + 1;
                                                    if (dateMonth < 10) {
                                                        dateMonth = "0" + dateMonth;
                                                    }
                                                    var dateYear = date.getFullYear();
                                                    var fullDate = (dateYear + "-" + dateMonth + "-" + dateDate + "T00:00:00")
                                                    if (fullDate == data2) {
                                                        debugger;
                                                        checkSlotDate = false;
                                                        return
                                                    }
                                                }
                                            )
                                            if (date.getDay() === data && checkSlotDate) {
                                                debugger;
                                                checkDay = true;
                                                return;
                                            }
                                        }
                                    );
                                    return checkDay;
                                }
                            ]
                        });
                    }
                });

                $.ajax({
                    url: "/Appointment/GetTreatment",
                    data: {
                        medFacId: $(this).val(),
                        doctorId: @ViewBag.DoctorId
                        },
                    beforeSend: () => { },
                    success: function (response) {
                        //debugger;
                        console.log(response.statusCode);
                        $("#tindakan").empty();
                        if (response.statusCode == 200) {
                            if (response.data.length > 0) {
                                $("#tindakan").prop("disabled", false);
                                $.each(
                                    response.data,
                                    function (idx, data) {
                                        $("#tindakan").append(
                                            `<option value="${data.id}">${data.name}</option>`
                                        );
                                    }
                                );
                            }
                        }
                    },
                    error: function (errResponse) {
                        console.error("errResponse", errResponse)
                        debugger;
                    }
                });
            }
            else {
                $("#tindakan").val("");
                $("#tindakan").empty();
                $("#tindakan").prop("disabled", true);
                $("#date").val("");
                $("#date").prop("disabled", true);
                $("#sesi").val("");
                $("#sesi").empty();
                $("#sesi").prop("disabled", true);
            }

            $("#date").change(function (e) {
                $("#sesi").prop("disabled", false);
                $.ajax({
                    url: "/Appointment/GetTimeSlot",
                    data: {
                        medFacId: $("#medFac").val(),
                        doctorId: @ViewBag.DoctorId,
                        date: $(this).val().toString()
                    },
                    async: false,
                    beforeSend: () => { },
                    success: function (response) {
                        $("#sesi").empty();
                        $.each(
                            response,
                            function (idx, data) {
                                $("#sesi").append(
                                    `<option value="${data.timeScheduleStart}">${data.range}</option>`
                                )
                            }
                        )
                    },
                    error: function (errResponse) {
                        debugger;
                        console.log(errResponse);
                    }
                });
            });
        });

        $("#btnSave").click(function (e) {
            var dofId = null;
            var dosId = null;
            var dateString = $("#date").val().split("-");
            var dateChoice = new Date(dateString[0], dateString[1] - 1, dateString[2]);
            var dateDate = dateChoice.getDate();
            if (dateDate < 10) {
                dateDate = "0" + dateDate;
            }
            var dateMonth = dateChoice.getMonth() + 1;
            if (dateMonth < 10) {
                dateMonth = "0" + dateMonth;
            }
            var dateYear = dateChoice.getFullYear();
            var fullDate = (dateYear + "-" + dateMonth + "-" + dateDate + " " + $("#sesi").val() + ":00");
            console.log(fullDate);
            $.ajax({
                url: "/Appointment/GetDoctorOfficeId",
                data: {
                    medFacId: $("#medFac").val(),
                    doctorId: @ViewBag.DoctorId
                },
                async: false,
                beforeSend: () => { },
                success: function (response) {
                    debugger;
                    dofId = response;
                },
                error: function (errResponse) {
                    debugger;
                    console.log(errResponse);
                    location.reload()
                }
            });

            $.ajax({
                url: "/Appointment/GetDoctorOfficeScheduleId",
                data: {
                    doctorId: @ViewBag.DoctorId,
                    medFacId: $("#medFac").val(),
                    day: dateChoice.getDay(),
                    timeStart: $("#sesi").val()
                    },
                async: false,
                beforeSend: () => { },
                success: function (response) {
                    debugger;
                    dosId = response;
                },
                error: function (errResponse) {
                    debugger;
                    console.log(errResponse);
                    location.reload()
                }
            });

            $("#frmAppointment").submit(function (e) {
                e.preventDefault();
            });

            $("#staticModalLgBody").html();
            $("#staticModalLgBody").load("/Appointment/Check/");

            $.ajax({
                url: "/Appointment/Create",
                type: "post",
                data: {
                    custId: $("#member").val(),
                    dofId: dofId,
                    dosId: dosId,
                    dotId: $("#tindakan").val(),
                    appDate: fullDate
                },
                beforeSend: () => { 
                   
                },
                success: function (response) {
                    if (response.statusCode == 200 || response.statusCode == 201) {
                        //alert("success");
                        $("#staticModalLg").modal("hide");
                        location.reload();
                    }
                    else {
                        $("#staticModalLgBody").html();
                        $("#staticModalLgBody").load("/Appointment/EmptySlot/");                       
                        //$("#staticModalLg").modal("show");
                        $("#tindakan").val("");
                        $("#tindakan").empty();
                        $("#tindakan").prop("disabled", true);
                        $("#date").val("");
                        $("#date").prop("disabled", true);
                        $("#sesi").val("");
                        $("#sesi").empty();
                        $("#sesi").prop("disabled", true);
                    }
                },
                error: function (errResponse) {
                    console.log(errResponse);
                    debugger;
                }
            });

        });
    });
</script>