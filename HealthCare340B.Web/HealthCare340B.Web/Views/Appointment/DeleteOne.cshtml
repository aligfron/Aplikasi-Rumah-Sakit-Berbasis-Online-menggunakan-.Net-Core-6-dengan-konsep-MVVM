@{
    Layout = null;
}

<div class="card">
    <div class="card-body">
        <p>Anda yakin akan membatalkan rencana kedatangan berikut?</p>
        &nbsp;
        <div>
            <div>
                <p>@ViewBag.CustomerName</p>
            </div>
            <div>
                <p>@ViewBag.AppointmentDate - @ViewBag.MedicalFacilityName</p>
            </div>
            <div>
                <p>@ViewBag.DoctorName - @ViewBag.Treatment</p>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-between">
        <div class="w-10"></div>
        <div class="w-30"><button id="btnCancel" class="btn btn-outline-info">Cancel</button></div>
        <div class="w-10"></div>
        <div class="w-30"><button id="btnSave" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticModalLg">Batalkan Janji</button></div>
        <div class="w-10"></div>
    </div>
</div>