@using HealthCare340B.Web
@{
    Layout = "_HasilDokterView";
}


<div class="container mt-2">
    <!-- Breadcrumb -->
    <div class="p-2 rounded" style="background-color: #F5F8FF;">
        <!-- Changed to bg-info for light blue -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index" class="text-dark">
                        <span>Home</span> <!-- Using span for text style -->
                    </a>
                </li>
                <li class="breadcrumb-item active text-dark" aria-current="page">
                    <span>Cari Dokter</span> <!-- Using span for text style -->
                </li>
            </ol>
        </nav>
    </div>

    <!-- Header Summary -->
    <div class="container">
        <div class="row mb-4">
            <div class="col-md-8">
                <h4>Hasil Pencarian berdasarkan kata kunci:</h4>
                <p>Lokasi: Jabodetabek, Spesialisasi/Sub-spesialisasi: Anak</p>
            </div>
            <div class="col-md-4 text-end">
                <button class="btn btn-outline-primary mt-2">Ulangi Pencarian</button>
            </div>
        </div>
    </div>

    <!-- Cards for Doctor Information -->
    <div class="row pb-4">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body d-flex">
                    <div class="flex-grow-1">
                        <h5 class="card-title">Nama Dokter Panjang</h5>
                        <p>Spesialis Anak</p>
                        <p>5 Tahun Pengalaman</p>
                        <p><i class="fas fa-hospital"></i> RS Mitra, (Jatiasih, Bekasi)</p>
                        <p><i class="fas fa-hospital"></i> RS Persahabatan (Kebayoran Lama, Jakarta Selatan)</p>
                        <button class="btn btn-outline-info mt-2">Lihat info lebih banyak</button>
                    </div>
                    <div class="text-center ml-3">
                        <i class="fas fa-user-circle fa-5x"></i>
                        <p class="mt-2 text-muted">Offline</p>
                        <button class="btn btn-primary">Chat</button>
                        <button class="btn btn-success mt-2">Buat Janji</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

