@using HealthCare340B.Web
@model List<VMMDoctor>
@{
    Layout = "_HasilDokterView";
}
<div class="container mt-2">
    <!-- Breadcrumb -->
    <div class="p-2 rounded" style="background-color: #F5F8FF;">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index" class="text-dark">
                        <span>Home</span>
                    </a>
                </li>
                <li class="breadcrumb-item active text-dark" aria-current="page">
                    <span>Cari Dokter</span>
                </li>
            </ol>
        </nav>
    </div>

    <!-- Header Summary -->
    <div class="container">
        <div class="row mb-4">
            <div class="col-md-8">
                <h4>Hasil Pencarian berdasarkan kata kunci:</h4>
                <p>Lokasi: @ViewBag.Location, Spesialisasi/Sub-spesialisasi: @ViewBag.Specialization</p>
            </div>
            <div class="col-md-4 text-end">
                <a href="@Url.Action("SearchDoctor", "Doctor")" class="btn btn-outline-primary mt-2">Ulangi Pencarian</a> <!-- Added a link to reset the search -->
            </div>
        </div>
    </div>

    <!-- Cards for Doctor Information -->
    @if (Model != null && Model.Any())
    {
        <div class="row pb-4">
            @foreach (var doctor in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body d-flex">
                            <div class="flex-grow-1">
                                <h5 class="card-title">@doctor.Fullname</h5> <!-- Display doctor name -->
                                <p>@doctor.Specialization</p> <!-- Display doctor specialization -->
                                <p>5 Tahun Pengalaman</p> <!-- Display experience -->
                                <p><i class="fas fa-hospital"></i> @doctor.MedicalFacilityName</p> <!-- Display hospital information -->
                                <button class="btn btn-outline-info mt-2">Lihat info lebih banyak</button>
                            </div>
                            <div class="text-center ml-3">
                                <i class="fas fa-user-circle fa-5x"></i>
                                <p class="mt-2 text-muted">aktif</p> <!-- Display online/offline status -->
                                <button class="btn btn-primary">Chat</button>
                                <button class="btn btn-success mt-2">Buat Janji</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            <p>Tidak ada dokter ditemukan berdasarkan pencarian Anda.</p> <!-- Message when no results are found -->
        </div>
    }
</div>

