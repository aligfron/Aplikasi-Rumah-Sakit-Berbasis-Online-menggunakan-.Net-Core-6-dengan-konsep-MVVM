@{
}

@if (@Context.Session.GetString("userRoleCode") == "ROLE_PASIEN")
{
    <div class="row">
        <div class="col-12">
            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist"
                 aria-orientation="vertical">
                <a class="nav-link" id="v-pills-pasien-tab" asp-controller="CustomerMember" asp-action="Index">Pasien</a>
                <a class="nav-link" id="v-pills-pembelianobat-tab" href="#">Pembelian Obat</a>
                <a class="nav-link" id="v-pills-rencanakedatangan-tab" asp-controller="Appointment" asp-action="RencanaKedatangan">Rencana Kedatangan</a>
                <a class="nav-link" id="v-pills-riwayatchatdokter-tab" href="#">Riwayat Chat Dokter</a>
                <a class="nav-link" id="v-pills-riwayatkedatangan-tab" asp-controller="AppointmentHistory" asp-action="Index">Riwayat Kedatangan</a>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            // Menambahkan kelas 'active' pada nav-link sesuai dengan URL
            var currentUrl = window.location.pathname;

            // Periksa URL dan sesuaikan dengan tombol yang tepat
            if (currentUrl.includes('/CustomerMember')) {
                $("#v-pills-pasien-tab").addClass("active");
            } else if (currentUrl.includes('/Profile/PembelianObat')) {
                $("#v-pills-pembelianobat-tab").addClass("active");
            } else if (currentUrl.includes('/Appointment/RencanaKedatangan')) {
                $("#v-pills-rencanakedatangan-tab").addClass("active");
            } else if (currentUrl.includes('/Profile/RiwayatChatDokter')) {
                $("#v-pills-riwayatchatdokter-tab").addClass("active");
            } else if (currentUrl.includes('/AppointmentHistory')) {
                $("#v-pills-riwayatkedatangan-tab").addClass("active");
            }

            // Navigasi klik tanpa refresh halaman
            $("#v-pills-pasien-tab").click(function (e) {
                e.preventDefault();
                location.href = '/CustomerMember';
                //$("#ContentProfile").load('/CustomerMember/');
            });

            $("#v-pills-pembelianobat-tab").click(function (e) {
                e.preventDefault();
            });

            $("#v-pills-rencanakedatangan-tab").click(function (e) {
                e.preventDefault();
                location.href = '/Appointment/RencanaKedatangan';
            });

            $("#v-pills-riwayatchatdokter-tab").click(function (e) {
                e.preventDefault();
            });

            $("#v-pills-riwayatkedatangan-tab").click(function (e) {
                e.preventDefault();
                location.href = '/AppointmentHistory';
            });
        });
    </script>
}
