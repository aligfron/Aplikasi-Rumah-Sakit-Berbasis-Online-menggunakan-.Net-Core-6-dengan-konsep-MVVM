@model VMMCustomer
@{
    Layout = null;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">

            <!-- Data Pribadi Section -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <span class="section-title">Data Pribadi</span>
                <a data-bs-toggle="modal" data-bs-target="#staticModal" id="editProfile" class="edit-link"><i class="fas fa-pen"></i> Ubah</a>
            </div>
            <div class="form-group mb-2">
                <label for="fullName">Nama Lengkap</label>
                <div class="d-flex justify-content-between align-items-center">
                    <p class="mb-1 text-muted">@Model.Fullname</p>
                </div>
            </div>
            <div class="form-group mb-2">
                <label for="birthDate">Tanggal Lahir</label>
                <div class="d-flex justify-content-between align-items-center">
                    <p class="mb-1 text-muted">@Model.Dob?.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
            <div class="form-group mb-2">
                <label for="phoneNumber">Nomor Handphone</label>
                <div class="d-flex justify-content-between align-items-center">
                    <p class="mb-1 text-muted">@Model.MobilePhone</p>
                </div>
            </div>

            <!-- Data Akun Section -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <span class="section-title">Data Akun</span>
            </div>
            <div class="form-group mb-2">
                <label for="email">Email</label>
                <div class="d-flex justify-content-between align-items-center">
                    <p class="mb-1 text-muted">@Model.Email</p>
                    <a data-bs-toggle="modal" data-bs-target="#staticModal" id="editEmail" class="edit-link"><i class="fas fa-pen"></i> Ubah</a>
                </div>
            </div>
            <div class="form-group mb-2">
                <label for="password">Password</label>
                <div class="d-flex justify-content-between align-items-center">
                    <input type="password" readonly class="form-control-plaintext" id="password" value="@Model.Password" />
                    <a data-bs-toggle="modal" data-bs-target="#staticModal" id="editPassword" class="edit-link"><i class="fas fa-pen"></i>Ubah</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $("#editProfile").click(function (e) {
        $("#staticModalBody").html("");
        $("#staticModalBody").load("/Profile/EditProfile/");
    });

    $("#editEmail").click(function (e) {
        $("#staticModalBody").html("");
        $("#staticModalBody").load("/Profile/EditEmail/");
    });

    $("#editPassword").click(function (e) {
        $("#staticModalBody").html("");
        $("#staticModalBody").load("/Profile/CurrentPassword/");
    });

    $(document).ready(function () {
        console.log("Document Profile Loaded");
        console.log($("#fullName").val());
    });
</script>
