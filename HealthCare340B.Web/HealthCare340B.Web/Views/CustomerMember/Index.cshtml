@{
    Layout = "_ProfilLayout";
}

<div class="page-title">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>@ViewData["Title"]</h3>
            <p class="text-subtitle text-muted"></p>
        </div>
    </div>
</div>
<section class="section">
    <div class="d-flex justify-content-between mb-5">
        <form id="frmCustomerFilter" asp-controller="CustomerMember" asp-action="Index">
            <div class="input-group">
                <input class="form-control" type="text" id="filter" name="Filter" value="@ViewBag.Filter" placeholder="Cari nama pasien" />
                <button type="submit" class="btn btn-secondary input-group-text"><i class="fas fa-search"></i></button>
            </div>
        </form>
        <div class="col-sm-3">
            <div class="input-group">
                <span class="input-group-text">Urutkan</span>
                <select id="orderBy" name="OrderBy" class="form-select">
                    <option data-orderby="@ViewBag.Nama">Nama</option>
                </select>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between mb-1">
        <button class="btn icon icon-left btn-outline-danger" title="Hapus..." data-bs-toggle="modal" data-bs-target="#staticModal">
            <i class="fas fa-trash"></i> Hapus
        </button>

        <div class="d-flex align-items-center justify-content-center text-center">
            <button class="btn">
                A-Z
            </button>
            <p class="mx-1 my-0">|</p>
            <p class="mx-1 my-0">10</p>
            <p class="mx-1 my-0">|</p>
            <button class="btn icon icon-left" title="Tambah..." data-bs-toggle="modal" data-bs-target="#staticModal">
                <i class="fas fa-plus"></i> Tambah
            </button>
        </div>
    </div>

    <div class="table-responsive ">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th style="width: 5%;"></th>
                    <th style="width: 75%;"></th>
                    <th style="text-align: right; width: 20%;"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {


                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" class="form-check-input" id="checkbox2">
                            </td>
                            <td>
                                <div>
                                    <p class="mb-0"><b>@item.Fullname</b></p>
                                    <p class="mb-0">@item.CustomerRelationName, @item.Age Tahun</p>
                                    <p class="mb-0">@item.TotalChat Chat Online, @item.TotalAppointment Janji Dokter</p>
                                </div>
                            </td>
                            <td style="text-align: right;">
                                <button class="btn icon icon-left" title="Tambah..." data-bs-toggle="modal" data-bs-target="#staticModal">
                                    <i class="fas fa-pencil-alt"></i> Ubah
                                </button>
                                <button class="btn icon icon-left" title="Tambah..." data-bs-toggle="modal" data-bs-target="#staticModal">
                                    <i class="fas fa-trash"></i> Hapus
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex align-items-center justify-content-end text-end">
        <p class="mx-5 my-0">Menampilkan 1 - 3 dari 3</p>
        <button class="btn btn-outline-secondary mx-1 my-0" title="Tambah...">
            Sebelumnya
        </button>
        <button class="btn btn-outline-secondary mx-1 my-0" title="Tambah...">
            Selanjutnya
        </button>
    </div>
</section>