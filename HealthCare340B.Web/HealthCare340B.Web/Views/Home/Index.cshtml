        <div class="col d-flex justify-content-center">
            <div class="card w-100" data-bs-target="#staticModal" id="btnSearchDoctor" data-bs-toggle="modal" style="max-width: 200px;">
                <div class="card-body d-flex flex-column justify-content-center align-items-center text-center p-3">
                    <a id="test" class="text-decoration-none d-flex flex-column align-items-center">
                        <div class="icon-wrapper mb-3 d-flex justify-content-center align-items-center" style="width: 80px; height: 80px;">
                            <i class="fas fa-search text-primary" style="font-size: 50px;"></i>
                        </div>
                        <p class="menu-name mb-0 font-weight-bold">Cari Dokter</p>
                    </a>
                </div>
            </div>
        </div>

        <div class="col d-flex justify-content-center">
            <div class="card w-100" style="max-width: 200px;">
                <div class="card-body d-flex flex-column justify-content-center align-items-center text-center p-3">
                    <a href="/MedicalItem/SearchMedicalItem" class="text-decoration-none d-flex flex-column align-items-center">
                        <div class="icon-wrapper mb-3 d-flex justify-content-center align-items-center" style="width: 80px; height: 80px;">
                            <i class="fas fa-user-md text-primary" style="font-size: 50px;"></i>
                        </div>
                        <p class="menu-name mb-0 font-weight-bold">Detail Dokter</p>
                    </a>
                </div>
            </div>
        </div>

        <div class="col d-flex justify-content-center">
            <div class="card w-100" data-bs-target="#staticModal" id="btnSearchMedicalItem" data-bs-toggle="modal" style="max-width: 200px;">
                <div class="card-body d-flex flex-column justify-content-center align-items-center text-center p-3">
                    <a class="text-decoration-none d-flex flex-column align-items-center">
                        <div class="icon-wrapper mb-3 d-flex justify-content-center align-items-center" style="width: 80px; height: 80px;">
                            <i class="fas fa-pills mb-3 text-primary" style="font-size: 50px;"></i>
                        </div>
                        <p class="menu-name mb-0 font-weight-bold">Cari Obat</p>
                    </a>
                </div>
            </div>
        </div>

