@model List<VMMPaymentMethod>?
@{
}

<div class="d-flex justify-content-between">
    <div class="w-25">
        <button id="btnAdd" class="btn btn-success" title="Add New Product..."
                data-bs-toggle="modal" data-bs-target="#staticModalLg">
            <i class="fas fa-plus"></i>
        </button>
    </div>
    <div class="w-75 d-flex justify-content-between">
        <div class="w-50">
        </div>
        <form class="w-50" id="frmProductFilter" method="get" asp-controller="PaymentMethod" asp-action="Index">
            <div class="input-group">
                <span class="input-group-text">Search: </span>
                <input class="form-control" type="text" id="filter" name="Filter" value="@ViewBag.filter" />
                <button id="btnProductFilter" type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
            </div>
        </form>
    </div>
</div>

<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="col-9">Nama</th>
                <th class="col-3">#</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (VMMPaymentMethod pm in Model)
                {
                    <tr>
                        <td>@pm.Name</td>
                        <td>
                            <div class="btn-group" role="group">
                                <button data-id="@pm.Id" class="btn btn-info" title="Edit..."
                                        data-bs-toggle="modal" data-bs-target="#staticModalLg">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button data-id="@pm.Id" class="btn btn-danger" title="Delete..."
                                        data-bs-toggle="modal" data-bs-target="#staticModalLg">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="text-center">-- No Payment Method Data --</td>
                </tr>
            }

        </tbody>
    </table>
</div>
