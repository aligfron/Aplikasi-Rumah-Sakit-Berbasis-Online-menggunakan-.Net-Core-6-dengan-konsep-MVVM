@model Pagination<VMMPaymentMethod>
@{
}

<div class="d-flex justify-content-between">
    <div class="w-25">
        <button id="btnAdd" class="btn btn-success" title="Add New Payment Method..."
                data-bs-toggle="modal" data-bs-target="#staticModalLg">
            <i class="fas fa-plus"></i>
        </button>
    </div>
    <div class="w-75 d-flex justify-content-between">
        <div class="w-50">
        </div>
        <form class="w-50" id="frmProductFilter" method="get" asp-controller="PaymentMethod" asp-action="Index">
            <div class="input-group">
                <span class="input-group-text">Search: </span>
                <input class="form-control" type="text" id="filter" name="Filter" value="@ViewBag.filter" />
                <button id="btnProductFilter" type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
                <input name="currPageSize" type="hidden" value="@ViewBag.PageSize" />
                <input name="pageNumber" type="hidden" value="@Model.PageIndex" />
            </div>
        </form>
    </div>
</div>

<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="col-9">Nama</th>
                <th class="col-3">#</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.TotalData > 0)
            {
                foreach (VMMPaymentMethod pm in Model)
                {
                    <tr>
                        <td>@pm.Name</td>
                        <td>
                            <div class="btn-group" role="group">
                                <button data-id="@pm.Id" class="btn btn-info" title="Edit..."
                                        data-bs-toggle="modal" data-bs-target="#staticModalLg">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button data-id="@pm.Id" class="btn btn-danger" title="Delete..."
                                        data-bs-toggle="modal" data-bs-target="#staticModalLg">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="text-center">-- No Payment Method Data --</td>
                </tr>
            }

        </tbody>
    </table>
</div>

<div class="row">
    <div class="col-2">Page @Model.PageIndex of @Model.TotalPages</div>
    <div class="col-7 d-flex justify-content-center">
        <div class="btn-group">
            <a class="btn btn-secondary @(!Model.HasPreviousPage ? "disabled" : "")" title="Previous Page..."
               asp-controller="PaymentMethod" asp-action="Index"
               asp-route-currPageSize="@ViewBag.PageSize"
               asp-route-filter="@ViewBag.Filter"
               asp-route-pageNumber="@(Model.PageIndex <= 1 ? Model.PageIndex : Model.PageIndex - 1)"><i class="fas fa-backward"></i></a>
            <a class="btn btn-secondary @(!Model.HasNextPage ? "disabled" : "")" title="Next Page..."
               asp-controller="PaymentMethod" asp-action="Index"
               asp-route-currPageSize="@ViewBag.PageSize"
               asp-route-filter="@ViewBag.Filter"
               asp-route-pageNumber="@(Model.PageIndex >= Model.TotalPages ? Model.PageIndex : Model.PageIndex + 1)">
                <i class="fas fa-forward"></i>
            </a>
        </div>
    </div>
    <div class="col-3 d-flex justify-content-end">
        <form id="frmPageSize" method="get"
              asp-controller="PaymentMethod" asp-action="Index">
            <div class="input-group">
                <span class="input-group-text">Show</span>
                <input class="form-control" type="text" id="pageSize" name="currPageSize" value="@ViewBag.PageSize" />
                <span class="input-group-text"> Entries</span>
            </div>
            <input name="filter" type="hidden" value="@ViewBag.Filter" />
            <input name="pageNumber" type="hidden" value="@Model.PageIndex" />
        </form>
    </div>
</div>


<script>
    $("#btnAdd").click(function (e) {
        $("#staticModalLgBody").html();
        $("#staticModalLgBody").load("/PaymentMethod/Create/");
    })

    $(".btn-info").click(function (e) {
        $("#staticModalLgBody").html();
        $("#staticModalLgBody").load("/PaymentMethod/Edit/" + $(this).data("id"));
    })

    $(".btn-danger").click(function (e) {
        $("#staticModalLgBody").html();
        $("#staticModalLgBody").load("/PaymentMethod/Delete/" + $(this).data("id"));
    })
</script>
