@{
    Layout = null;
}
<form id="frmConfirm" >
    <div class="card mb-0">
        <div>
            Masukkan email Anda. Kami akan melakukan pengecekan
        </div>
        <div class="card-body">
            <div class="input-group mb-3">
                <label class="input-group-text col-3 text-white-600" for="txtEmail">E-Mail</label>
                <input id="txtEmail" type="email" class="form-control col-9" name="Email" />
            </div>
        </div>
        <div class="card-footer">
            <div class="text-center">
                <button  type="submit" class="btn btn-primary text-lg fs-10" id="btnsendOTP">
                    <span>Kirim OTP</span>
                </button>
                <small class="form-text text-muted">kirim Otp dalam</small>
            </div>
        </div>
    </div>
</form>

<script>
    $("#staticModalLabelLg").text("@ViewBag.Title");

    $("#frmConfirm").on('submit', function (e) {
        e.preventDefault();
        debugger;
        var email = $("#txtEmail").val();
        console.log(email); 
        

        $.ajax({
            url: "Register/EmailConfirm",
            type: "POST",
            data: { email: email }, 
            beforeSend: function () {
                
            },
            success: function (response) {
                if (response.statusCode === 200 || response.statusCode === 201) {
                    $("#staticModalLgBody").html("");
                    $("#staticModalLgBody").load("/Register/VerifyOtp"); 
                    $("#staticModalLg").modal('show');
                } else {
                    
                    alert(response.message);
                }
            },
            error: function (errResponse) {
                console.error(errResponse);
                alert("Terjadi kesalahan. Silakan coba lagi.");
            }
        });
    });   
</script>


